<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:visibility="invisible"
    android:gravity="center">

    <View
        android:id="@+id/llbackExpandedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/imagefactory_background"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.mcgars.imagefactory.ViewPagerFixes
        android:id="@+id/viewPagerActitivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/pbLoaderExpanded"
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:padding="1px"
        android:background="@color/imagefactory_loader_background"
        android:visibility="gone"
        android:progressDrawable="@drawable/imagefactory_progress"
        style="@style/imagefactory_progresbarspiner"

        android:max="100" />

</FrameLayout>